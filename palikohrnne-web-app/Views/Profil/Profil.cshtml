@model palikohrnne_web_app.Models.Citoyen
@using palikohrnne_web_app.Api

@{
    ViewData["Title"] = "Register";
}

<h1 class="app-page-title">Profil de @Model.Pseudo</h1>
<div class="row gy-4">
    <div class="col-12">
        <div class="app-card app-card-account shadow-sm d-flex flex-column align-items-start">
            <div class="app-card-header p-3 border-bottom-0">
                <div class="row align-items-center gx-3">
                    <div class="col-auto">
                        <div class="app-icon-holder">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                            </svg>
                        </div><!--//icon-holder-->

                    </div><!--//col-->
                    <div class="col-auto">
                        <h4 class="app-card-title">Informations</h4>
                    </div><!--//col-->
                </div><!--//row-->
            </div><!--//app-card-header-->
            <div class="app-card-body px-4 w-100">
                <div class="item border-bottom py-3">
                    <div class="row justify-content-between align-items-center">
                        <div class="col-auto">
                            <div class="item-label mb-2"><strong>Photo</strong></div>
                            <div class="item-data"><img class="profile-image" src="~/assets/images/user-anonymous.png" alt=""></div>
                        </div><!--//col-->
                    </div><!--//row-->
                </div><!--//item-->
                <div class="item border-bottom py-3">
                    <div class="row justify-content-between align-items-center">
                        <div class="col-auto">
                            <div class="item-label"><strong>Name</strong></div>
                            <div class="item-data">@Model.Nom @Model.Prenom</div>
                        </div><!--//col-->
                    </div><!--//row-->
                </div><!--//item-->
                <div class="item border-bottom py-3">
                    <div class="row justify-content-between align-items-center">
                        <div class="col-auto">
                            <div class="item-label"><strong>Civilité</strong></div>
                            <div class="item-data">
                                @Model.Genre
                            </div>
                        </div><!--//col-->
                    </div><!--//row-->
                </div><!--//item-->
                <div class="item py-3">
                    <div class="row justify-content-between align-items-center">
                        <div class="col-auto">
                            <div class="item-label"><strong>Pseudo</strong></div>
                            <div class="item-data">
                                @Model.Pseudo
                            </div>
                        </div><!--//col-->

                    </div><!--//row-->
                </div><!--//item-->
            </div><!--//app-card-body-->

        </div><!--//app-card-->
    </div><!--//col-->
</div><!--//row-->
@if (ViewBag.DemandeRelation)
{
    <div class="row gy-4 mt-3">
        <div class="col-12">
            <div class="app-card app-card-account shadow-sm d-flex flex-column align-items-start">
                <div class="app-card-header p-3 border-bottom-0">
                    <div class="row align-items-center gx-3">
                        <div class="col-auto">
                            <div class="app-icon-holder">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                                </svg>
                            </div><!--//icon-holder-->

                        </div><!--//col-->
                        <div class="col-auto">
                            <h4 class="app-card-title">Demande de relation</h4>
                        </div><!--//col-->

                    </div><!--//row-->
                    <div class="row mt-3">
                        <div class="col-auto">
                            <div class="col-auto">
                                <p>
                                    @Model.Pseudo a demandé à rejoindre votre cercle de relation
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-auto">
                            <div class="col-auto">
                                <form asp-action="DecisionRelation" asp-controller="Relation">
                                    <input type="hidden" name="idCitoyen" value="@Model.ID">
                                    <input type="hidden" name="typeRelationId" value="@ViewBag.TypeRelationId">
                                    <input type="submit" value="Accepter" name="decision" class="btn btn-success">
                                    <input type="submit" value="Refuser" name="decision" class="btn btn-danger ml-2">
                                </form>
                            </div>
                        </div>
                    </div>
                </div><!--//app-card-header-->


            </div><!--//app-card-->
        </div><!--//col-->
    </div><!--//row-->
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
