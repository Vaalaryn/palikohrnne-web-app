@model RelationCitoyen
@{
    ViewData["Title"] = "Ajouter";
}
@section Styles {
    <link href="~/lib/select2/css/select2.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/lib/select2/js/select2.js"></script>
    <script src="~/lib/select2/js/i18n/fr.js"></script>
    <script src="~/js/select2Relation.js"></script>
}

<h1 class="app-page-title">Ajouter une relation</h1>
<hr class="mb-4">
<div class="row g-4 settings-section">
    <div class="col-12 col-md-8 mx-auto">
        <div class="app-card app-card-settings shadow-sm p-4">

            <div class="app-card-body">
                <form asp-action="Ajouter" method="post" class="settings-form">
                    <input type="hidden" asp-for="CitoyenID">
                    <div class="mb-3">
                        <label for="setting-input-2" class="form-label">Nom, prénom ou pseudo du citoyen</label>
                        <select asp-for="CitoyenCibleID" class="form-control" id="select2-relation"></select>
                    </div>
                    <div class="mb-3">
                        <label for="setting-input-3" class="form-label">Business Email Address</label>
                        <select asp-for="TypeRelationID" class="form-control" asp-items="ViewBag.TypeRelation"></select>
                    </div>
                    <button type="submit" class="btn app-btn-primary">Ajouter</button>
                </form>
            </div><!--//app-card-body-->

        </div><!--//app-card-->
    </div>
</div><!--//row-->
